{
    "$schema": "./package-schema.json",
    "version": "1.0",
    "package": {
        "url": "https://emtoolboxstore/package.zip",
        "checksum": "asd645sa786a4d5as6d7a8s64ae54r86ea486da6s"
    },

    "metadata": {
        "id": "42",
        "title": "TWA IPW package",
        "author": "Me",
        "exposition": "This week's art",
        "other": [
            {"key": "coauthor", "value": "Pete"},
            {"key": "location", "value": "1st Avenue"}
        ]
    },

    "inputs": [
        {
            "effect": "ActionA",
            "type": "complex",
            "mapping": {
                "source": "mainWall_camera1"
            }
        },
        {
            "effect": "ActionB",
            "type": "bool",
            "mapping": {
                "source": "raspi1_temperature",
                "transform": {
                    "from": "integer",
                    "type": "if",
                    "comparisonType": "equals",
                    "comparisonValue": 10
                }
            }
        },
        {
            "effect": "ActionC",
            "type": "integer",
            "mapping": {
                "source": "raspi1_volume",
                "transform": {
                    "from": "float",
                    "type": "map",
                    "inMin": 0,
                    "inMax": 1,
                    "outMin": 0,
                    "outMax": 100
                }
            }
        },
        {
            "effect": "ActionD",
            "type": "string",
            "mapping": {
                "source": "secondaryWall_events"
            }
        }
    ],

    "parameters": {
        "displayType": "video",
        "settings": 
        {
            "fileName": "123.mp4",
            "loop": true,
            "autoStart": true,
            "aspectRatio": "fitInside",
            "backgroundColor": "#FF00FF",
            "videoEvents": [
                {
                    "timestamp": 5.5,
                    "eventName": "It happened!"
                }
            ]
        }
    },

    "sync": {
        "relayAddress": "192.168.1.10",
        "canvasDimensions": {
            "width": 3640,
            "height": 1024
        },
        "elements": [
            {
                "hostname": "mainWall",
                "viewportTransform": "1920x1024+100+0"
            },
            {
                "hostname": "secondaryWall",
                "viewportTransform": "1920x1024-100+0"
            }
        ]
    }
}