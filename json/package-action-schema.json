{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "action": {
            "type": "object",
            "properties": {
                "effect": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "void",
                        "bool",
                        "integer",
                        "float",
                        "string",

                        "complex"
                    ]
                },
                "mapping": {
                    "type": "object",
                    "properties": {
                        "source": {
                            "type": "string"
                        },
                        "transform": {
                            "oneOf": [
                                {
                                    "$ref": "package-transforms-schema.json#/definitions/void/constant"
                                },

                                {
                                    "$ref": "package-transforms-schema.json#/definitions/bool/if"
                                },
                                {
                                    "$ref": "package-transforms-schema.json#/definitions/bool/negate"
                                },
                                {
                                    "$ref": "package-transforms-schema.json#/definitions/bool/map"
                                },
                                {
                                    "$ref": "package-transforms-schema.json#/definitions/bool/toString"
                                },

                                {
                                    "$ref": "package-transforms-schema.json#/definitions/integer/if"
                                },
                                {
                                    "$ref": "package-transforms-schema.json#/definitions/integer/map"
                                },
                                {
                                    "$ref": "package-transforms-schema.json#/definitions/integer/toString"
                                },

                                {
                                    "$ref": "package-transforms-schema.json#/definitions/float/if"
                                },
                                {
                                    "$ref": "package-transforms-schema.json#/definitions/float/round"
                                },
                                {
                                    "$ref": "package-transforms-schema.json#/definitions/float/map"
                                },
                                {
                                    "$ref": "package-transforms-schema.json#/definitions/float/toString"
                                },

                                {
                                    "$ref": "package-transforms-schema.json#/definitions/string/if"
                                },
                                {
                                    "$ref": "package-transforms-schema.json#/definitions/string/parse"
                                }
                            ]
                        }
                    },
                    "required": [
                        "source"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "effect",
                "type",
                "mapping"
            ],
            "additionalProperties": false
        }
    }
}