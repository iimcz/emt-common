{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/contentPackage",
    "definitions": {
        "contentPackage": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "$schema": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "package": {
                    "$ref": "#/definitions/package"
                },
                "metadata": {
                    "$ref": "#/definitions/metadata"
                },
                "inputs": {
                    "$ref": "#/definitions/inputs"
                },
                "parameters": {
                    "$ref": "#/definitions/parameters"
                },
                "sync": {
                    "$ref": "#/definitions/sync"
                }
            },
            "required": [
                "$schema",
                "version",
                "package",
                "metadata"
            ]
        },
        "inputs": {
            "type": "array",
            "items": {
                "$ref": "package-action-schema.json#/definitions/action"
            }
        },
        "metadata": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "author": {
                    "type": "string"
                },
                "exposition": {
                    "type": "string"
                },
                "other": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "key": {
                                "type": "string"
                            },
                            "value": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "key",
                            "value"
                        ],
                        "additionalProperties": false
                    }
                }
            },
            "required": [
                "id",
                "title",
                "author",
                "exposition"
            ]
        },
        "package": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "checksum": {
                    "type": "string"
                }
            },
            "required": [
                "checksum",
                "url"
            ]
        },
        "parameters": {
            "$ref": "package-parameters-schema.json#/definitions/parameters"
        },
        "sync": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "canvasDimensions": {
                    "type": "object",
                    "properties": {
                        "width": {
                            "type": "integer"
                        },
                        "height": {
                            "type": "integer"
                        }
                    },
                    "additionalProperties": false
                },
                "elements": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "role": {
                                "type": "string"
                            },
                            "hostname": {
                                "type": "string"
                            },
                            "address": {
                                "type": "string"
                            },
                            "viewportTransform": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "hostname",
                            "role",
                            "viewportTransform"
                        ]
                    }
                }
            },
            "required": [
                "canvasDimensions",
                "elements"
            ]
        }
    }
}